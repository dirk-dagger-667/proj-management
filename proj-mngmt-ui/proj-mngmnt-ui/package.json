{
  "name": "proj-mngmnt-ui",
  "version": "0.0.0",
  "scripts": {
    "ng": "npx ng",
    "start": "npx ng serve",
    "build": "npx ng build --base-href ./",
    "generate-api": "npx ng-openapi -c openapi.config.ts ",
    "watch": "npx ng build --watch --configuration development",
    "electron:dev": "npx ng build --watch --configuration electron --base-href ./ & ts-node electron/electron-main.ts",
    "electron:build": "npx ng build --configuration electron --prod --base-href ./ && tsc -p tsconfig.electron.json && electron dist-electron/electron-main.js",
    "electron:package": "npx ng build --configuration electron --prod --base-href ./ && tsc -p tsconfig.electron.json && electron-builder",
    "test": "npx ng test"
  },
  "prettier": {
    "printWidth": 100,
    "singleQuote": true,
    "overrides": [
      {
        "files": "*.html",
        "options": {
          "parser": "angular"
        }
      }
    ]
  },
  "private": true,
  "dependencies": {
    "@angular/common": "^20.3.0",
    "@angular/compiler": "^20.3.0",
    "@angular/core": "^20.3.0",
    "@angular/forms": "^20.3.0",
    "@angular/platform-browser": "^20.3.0",
    "@angular/router": "^20.3.0",
    "rxjs": "~7.8.0",
    "tslib": "^2.3.0",
    "zone.js": "~0.15.0"
  },
  "devDependencies": {
    "@angular/build": "^20.3.5",
    "@angular/cli": "^20.3.5",
    "@angular/compiler-cli": "^20.3.0",
    "@angular/material": "^20.2.9",
    "@types/electron": "^1.4.38",
    "@types/jasmine": "~5.1.0",
    "@types/node": "^24.7.2",
    "electron": "^38.3.0",
    "jasmine-core": "~5.9.0",
    "karma": "~6.4.0",
    "karma-chrome-launcher": "~3.2.0",
    "karma-coverage": "~2.2.0",
    "karma-jasmine": "~5.1.0",
    "karma-jasmine-html-reporter": "~2.1.0",
    "ng-openapi": "^0.2.8",
    "ts-node": "^10.9.2",
    "typescript": "~5.9.2"
  }
}
